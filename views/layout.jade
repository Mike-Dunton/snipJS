html
    head
        title #{title} - SnipJS
        script(src='http://code.jquery.com/jquery-1.10.1.min.js' type='script/javascript')
        script(src="/js/tagmanager.js", type='script/javascript')
        script(src="/js/ace.js", type='script/javascript', 'charset="utf-8')
        link(rel='stylesheet', href='/stylesheets/tagmanager.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(type='text/javascript') .
            $(function() {
                $(".tm-input").tagsManager({
                 prefilled : ["map", "reduce"],
                 CapitalizeFirstLetter: true,
                 preventSubmitOnEnter: true,
                 delimeters: [44, 13],
                 backspace : [8],
                 hiddenTagListName: 'theHiddenTagList'
                });
            });
        script(type='text/javascript') .
            var editor = ace.edit("editor");
            editor.setTheme("ace/theme/monokai");
            editor.getSession().setMode("ace/mode/javascript");
    body
        header
            h1 Snip.js
        .container
            .main-content
                block content
            .sidebar
                block sidebar
        footer
            p Snip yo script
